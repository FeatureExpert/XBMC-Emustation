<includes>
		<!-- Colour values bellow, are used only if the external file is missing or corrupt -->
		<!-- https://www.colorcombos.com/colors/D9D9D9 -->
		<variable name="downloader_tab_focus_colour">
				<value>FF0a9ece</value>
		</variable>
		<variable name="downloader_tab_nofocus_colour">
				<value>80FFFFFF</value>
		</variable>
		<variable name="downloader_info_text_colour">
				<value>FF212121</value>
		</variable>
		<variable name="downloader_button_text_colour">
				<value>FFFFFFFF</value>
		</variable>
		<variable name="downloader_content_text_colour">
				<value>FF212121</value>
		</variable>
		<variable name="downloader_content_colour">
				<value>FFFFFFFF</value>
		</variable>
		<variable name="downloader_background_colour">
				<value>FFD9D9D9</value>
		</variable>
		<variable name="downloader_spacer_colour">
				<value>FA292929</value>
		</variable>
		<variable name="downloader_content_focus_colour">
				<value>FF347992</value>
		</variable>
		<!-- This is the external file that colours the theme -->
		<include file="Includes_URLDownloader_Colours.xml" />
		<!-- Animations -->
		<include name="DownloaderVisibleFadeEffect">
				<animation effect="fade" start="0" end="100" delay="0" time="280">Visible</animation>
				<animation effect="fade" start="100" end="0" delay="0" time="0">Hidden</animation>
		</include>
		<include name="downloader_openclose">
				<animation type="WindowOpen" reversible="false">
						<!-- <effect type="zoom" start="80" end="100" center="640,360" easing="in" tween="back" time="200" /> -->
						<effect type="fade" start="0" end="100" time="280" />
				</animation>
				<animation type="WindowClose" reversible="false">
						<!-- <effect type="zoom" start="100" end="80" center="640,360" easing="out" tween="back" time="100" /> -->
						<effect type="fade" start="100" end="0" time="180" />
				</animation>
		</include>
		<include name="downloader_label_name_vars">
				<posx>20</posx>
				<posy>197</posy>
				<width>226</width>
				<height>50</height>
				<font>size_11</font>
				<align>left</align>
				<textcolor>$VAR[downloader_content_text_colour]</textcolor>
				<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
		</include>
		<include name="downloader_label_names">
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>APPLICATIONS</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),1)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>ARTWORK</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),2)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>DASHBOARDS</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),3)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>DLC</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),4)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>EMULATORS</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),5)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>HOMEBREW</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),6)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>MODS</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),7)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>OTHER</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),8)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>THEMES</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),9)</visible>
				</control>
				<control type="label">
						<include>downloader_label_name_vars</include>
						<label>UPDATES</label>
						<visible>StringCompare(Skin.String(downloader_tab_id),10)</visible>
				</control>
		</include>
		<include name="Downloader_Buttons">
				<posx>78</posx>
				<posy>0</posy>
				<width>1134</width>
				<height>720</height>
				<onup condition="!ControlGroup(9000).HasFocus(10)">9001</onup>
				<ondown condition="!ControlGroup(9000).HasFocus(10)">9001</ondown>
				<ondown condition="ControlGroup(9000).HasFocus(10)">9002</ondown>
				<onleft>9000</onleft>
				<onright condition="!ControlGroup(9000).HasFocus(10)">9002</onright>
				<preloaditems>3</preloaditems>
				<include>DownloaderVisibleFadeEffect</include>
		</include>
		<include name="Downloader_Look_and_Feel">
				<itemlayout height="225" width="280">
						<control type="image">
								<posx>10</posx>
								<posy>10</posy>
								<width>264</width>
								<height>209</height>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>$VAR[downloader_content_colour]</colordiffuse>
								<texture>Special://urldownloader/artwork/UI/content_underlay.png</texture>
						</control>
						<include>downloader_label_names</include>
						<!-- Item Name -->
						<control type="textbox">
								<posx>29</posx>
								<posy>138</posy>
								<width>226</width>
								<height>60</height>
								<font>size_17</font>
								<textcolor>-</textcolor>
								<align>center</align>
								<label>[COLOR $VAR[downloader_content_text_colour]][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/COLOR]</label>
								<scroll>false</scroll>
						</control>
						<!-- Thumb -->
						<control type="image">
								<posx>14</posx>
								<posy>13</posy>
								<width>256</width>
								<height>117</height>
								<aspectratio>stretch</aspectratio>
								<texture background="true" fallback="Special://urldownloader/artwork/UI/thumb_empty.png">Special://urldownloader/artwork/thumbnails/$INFO[listitem.thumb]</texture>
						</control>
				</itemlayout>
				<focusedlayout height="225" width="280">
						<control type="image">
								<posx>10</posx>
								<posy>10</posy>
								<width>264</width>
								<height>209</height>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>$VAR[downloader_content_colour]</colordiffuse>
								<texture>Special://urldownloader/artwork/UI/content_underlay.png</texture>
						</control>
						<include>downloader_label_names</include>
						<!-- Item Name -->
						<control type="textbox">
								<posx>29</posx>
								<posy>138</posy>
								<width>226</width>
								<height>60</height>
								<font>size_17</font>
								<textcolor>-</textcolor>
								<align>center</align>
								<label>[COLOR $VAR[downloader_content_text_colour]][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/COLOR]</label>
								<autoscroll delay="2000" time="1000" repeat="1000" condition="Container(9000).HasFocus">Conditional</autoscroll>
								<scroll>true</scroll>
						</control>
						<!-- Thumb -->
						<control type="image">
								<posx>14</posx>
								<posy>13</posy>
								<width>256</width>
								<height>117</height>
								<aspectratio>stretch</aspectratio>
								<texture background="true" fallback="Special://urldownloader/artwork/UI/thumb_empty.png">Special://urldownloader/artwork/thumbnails/$INFO[listitem.thumb]</texture>
						</control>
						<!-- Border -->
						<control type="image">
								<posx>5</posx>
								<posy>4</posy>
								<width>274</width>
								<height>219</height>
								<colordiffuse>$VAR[downloader_content_focus_colour]</colordiffuse>
								<aspectratio>stretch</aspectratio>
								<texture>Special://urldownloader/artwork/UI/content_overlay.png</texture>
						</control>
				</focusedlayout>
		</include>
</includes>